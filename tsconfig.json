{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "noEmit": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "outDir": "dist",
        "baseUrl": "./",
        "resolveJsonModule": true,
    },
    "exclude": ["node_modules", "dist"]
}
